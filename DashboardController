package com.nackademin.iot.controller;

import com.nackademin.iot.model.SensorData;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import java.time.LocalDateTime;
import java.util.Arrays;
import java.util.List;

@Controller
public class DashboardController {

    @GetMapping("/")
    public String dashboard(Model model) {
        // Mockdata f√∂r att testa webbappen
        List<SensorData> sensorDataList = Arrays.asList(    
                new SensorData(24.1, 60.1, LocalDateTime.now().minusMinutes(5)),
                new SensorData(23.9, 59.8, LocalDateTime.now().minusMinutes(10)),
                new SensorData(24.3, 60.5, LocalDateTime.now().minusMinutes(15))
        );

        model.addAttribute("latest", sensorDataList.get(0));
        model.addAttribute("history", sensorDataList);
        return "dashboard";
    }
}
